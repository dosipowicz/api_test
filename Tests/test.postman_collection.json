						"exec": [
							"var jsonData=JSON.parse(responseBody);",
							"",
							"pm.environment.set(\"sales\", jsonData);",
							"",
							"var sections={newest:0,current:0,lastday:0};",
							"",
							"jsonData.forEach(function(sale){",
							"    sections[sale.section]++;",
							"})",
							"",
							"",
							"for (var key in sections) {",
							"    tests['czy istnieją kampanie w sekcji '+key+' '+sections[key]]=sections[key]>0;",
							"}",
							"",
							"    var echoPostRequest = {",
							"      url: 'https://www.zlotewyprzedaze.pl/api/rest/catalog/products',",
							"      method: 'POST',",
							"      header:[\"LOGIN-HASH:0000000\",\"Content-Type:application/json\"],",
							"      body: {",
							"        mode: 'raw',",
							"        raw: JSON.stringify({ scope: '{products:{entity_id,sizes}}}' })",
							"      }",
							"    };",
							"    var i=0;",
							"pm.environment.get(\"sales\").forEach(function(sale){",
							"    i++;",
							"",
							"",
							"     echoPostRequest.body.raw=JSON.stringify({ scope: '{products:{entity_id,sizes{qty},qty}}',category_id:sale.id });",
							"      ",
							"",
							"    ",
							"    pm.sendRequest(echoPostRequest, function (err, res) {",
							"       var json=res.json();",
							"        pm.test(sale.name+' - liczba produktów większa od zera', function () {",
							"            pm.expect(json.products.length).to.be.above(0);",
							"        });",
							"        ",
							"        pm.test(sale.name+' - czy nie jest wyprzedana', function () {",
							"            var sold=0;",
							"            json.products.forEach(function(product){",
							"                if(product.qty>0){",
							"                    sold=1;",
							"                }",
							"            });",
							"            pm.expect(sold).to.be.above(0);",
							"        });",
							"    });",
							"    ",
							"",
							"})",
							""
						],
